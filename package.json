{
  "name": "rxbeach",
  "version": "0.8.4",
  "description": "Chill with streams at the RxBeach",
  "keywords": [
    "rxjs",
    "reactive",
    "streams",
    "beach",
    "rx"
  ],
  "company": "Ardoq AS",
  "homepage": "https://ardoq.github.io/rxbeach/",
  "bugs": "https://github.com/ardoq/rxbeach/issues",
  "repository": "github:ardoq/rxbeach",
  "author": "Tobias Laundal",
  "license": "MIT",
  "scripts": {
    "test": "yarn nyc ava",
    "test:watch": "yarn ava --watch",
    "lint": "yarn eslint --ext .ts src -c .eslintrc.js",
    "build": "rimraf dist && yarn tsc",
    "watch": "yarn tsc -w",
    "deploy:prep": "yarn build -p tsconfig-publish.json && node prep-package.js",
    "deploy": "yarn deploy:prep && yarn publish dist --non-interactive",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@ardoq/shared-configs": "0.1.16",
    "@ava/typescript": "1.1.1",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "13.1.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/react": "17.0.15",
    "@types/sinon": "10.0.2",
    "ava": "3.15.0",
    "conditional-type-checks": "1.0.5",
    "husky": "7.0.1",
    "nyc": "15.1.0",
    "pinst": "2.1.6",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "rimraf": "3.0.2",
    "rxjs": "7.3.0",
    "rxjs-marbles": "7.0.1",
    "sinon": "11.1.2",
    "standard-version": "9.3.1",
    "tap-xunit": "2.4.1",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "rxjs-spy": "8.0.0"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "rxjs": "^6.5.0"
  },
  "ava": {
    "files": [
      "src/**/*.spec.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "nyc": {
    "all": true,
    "sourceMap": true,
    "produce-source-map": false,
    "exclude-after-remap": false,
    "include": [
      "dist/**/*",
      "!dist/**/index.js",
      "!dist/**/*.tspec.js",
      "!dist/**/*.spec.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80,
    "parser": "typescript"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
