{
  "compilerOptions": {
    "target": "es2019",
    "strict": true,
    "allowJs": false,
    "downlevelIteration": true,

    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,

    "lib": ["es2019", "dom"],
    "jsx": "react",

    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
