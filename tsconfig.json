{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "allowJs": false,

    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "downlevelIteration": true,

    "lib": ["esnext", "dom"],
    "jsx": "react",

    "baseUrl": "./src/",
    "paths": {
      "rxbeach": ["./index.ts"],
      "rxbeach/*": ["./*"]
    },
    "noEmit": true
  },
  "include": ["src/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
